<h1>Add Ingredient</h1>

<div>
  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path, local: true, scope: @recipe_food, data: { turbo: false } do |form| %>
    <p>Select Ingredient</p>
    <br>
    <p>Food</p>
    <%= form.select :food_id, @foods.map { |food| [food.name, food.id] }, {}, { class:'form-select'} %>
    <br>
    <p>Quantity</p>
    <%= form.number_field :quantity, class:'form-control' %>
    <br>
    <%= form.submit "Add Ingredient" %>
  <% end %>
</div>