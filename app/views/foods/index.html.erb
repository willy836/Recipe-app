<section class="foods-list">
  <h1>Our Food List</h1>
  <div class="btn-container">
    <button>
      <%= link_to 'Add Food', new_food_path %>
    </button>
  </div>
  <table>
    <thead>
      <tr class="row-headings">
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price($)</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td>$ <%= food.price %></td>
          <td><%= button_to 'Delete', food_path(food), method: :delete, onclick: "return confirm('Are you sure?')", class: "dlt-btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
