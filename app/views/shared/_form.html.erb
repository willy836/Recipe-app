<%= form_with model: food, url: foods_path, local: true, scope: :food, data: { turbo: false } do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter food name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :measuremet_unit %>
    <%= form.text_field :measurement_unit, placeholder: "Enter measurement units e.g grams", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, placeholder: "Enter price in $", class: "form-control" %>
  </div>
  <div class="btn">
    <%= form.submit "Submit", class: "submit-btn" %>
  </div>
<% end %>
