<section class="shopping-list-container">
  <h1 class="shopping-list-h1">Shopping List</h1>
  <div class="food-to-buy">
    <p>Amount of food items to buy: <%= @foods.count %></p>
    <p>Total value of food needed: $<%= @total_price %></p>
  </div>
  <table>
    <thead>
      <tr class="row-headings">
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <% quantity = RecipeFood.joins(:food).where(food_id: food.id).sum('quantity') %>
          <td><%= food.name %></td>
          <td><%= quantity %></td>
          <td>$ <%= food.price * quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
